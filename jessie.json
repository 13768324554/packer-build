{
  "builders": [
    {
      "boot_command": [
        "<down><down><down><down><down><enter>",
        "/install.amd/vmlinuz initrd=/install.amd/initrd.gz ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `preseed_file`}} ",
        "debian-installer/language=en debian-installer/country=CA ",
        "debian-installer/locale=en_CA.UTF-8 auto-install/enable=true ",
        "netcfg/get_hostname={{user `hostname`}} ",
        "console-setup/ask_detect=false keyboard-configuration/layoutcode=us ",
        "vga=788 noprompt quiet --<enter>"
      ],
      "boot_wait": "3s",
      "disk_size": "{{user `disk_size`}}",
      "format": "ova",
      "guest_additions_mode": "upload",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_url": "http://download.virtualbox.org/virtualbox/{{.Version}}/VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Debian_64",
      "hard_drive_interface": "sata",
      "headless": false,
      "http_directory": ".",
      "http_port_max": 9000,
      "http_port_min": 8000,
      "iso_checksum": "1674e225c2bfe8c6c6ee3efe3147e1e774849add78bc2a5c4ea86877126c405700b427a2b12ee5d3d68873470bdc37066cc43c02e492efd7de2af45ac506c046",
      "iso_checksum_type": "sha512",
      "iso_interface": "sata",
      "iso_url": "http://cdimage.debian.org/cdimage/jessie_di_rc1/multi-arch/iso-cd/debian-jessie-DI-rc1-amd64-i386-netinst.iso",
      "name": "vbox",
      "output_directory": "build",
      "shutdown_command": "echo '{{user `sudo_password`}}' | sudo -E -S shutdown -P now",
      "shutdown_timeout": "5m",
      "ssh_host_port_max": 7000,
      "ssh_host_port_min": 6000,
      "ssh_password": "{{user `sudo_password`}}",
      "ssh_port": 22,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_wait_timeout": "20m",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `ram_size`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "workstation-{{isotime}}"
    }
  ],
  "description": "Yay",
  "post-processors": [
    {
      "keep_input_artifact": true,
      "only": [
        "vbox"
      ],
      "output": "build/workstation-{{isotime}}-{{.BuildName}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo '{{user `sudo_password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "only": [
        "vbox"
      ],
      "scripts": [
        "scripts/install_vbox_additions.sh"
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo '{{user `sudo_password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "only": [
        "vbox"
      ],
      "scripts": [
        "scripts/zero_image_drive.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "disk_size": 7500,
    "hostname": "debian",
    "mysql_root_password": "afailsafepassword",
    "preseed_file": "jessie.seed",
    "ram_size": 512,
    "ssh_username": "debian",
    "sudo_password": "debian"
  }
}

