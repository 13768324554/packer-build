        "initrd=/casper/initrd.lz ",
        "boot=casper ",
        "auto=true ",
        "automatic-ubiquity ",
        "url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `preseed_file`}} ",
        "language=en ",
        "country=CA ",
